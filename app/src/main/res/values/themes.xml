<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StylesThemePractice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/whiteText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/whiteText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@dimen/editTextWidth</item>
    </style>

    <style name="Theme.StylesThemeLightPurple" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/blackText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/blackText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextProperties" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/primaryDark</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:layout_marginLeft">@dimen/leftMargin</item>
        <item name="android:layout_marginRight">@dimen/rightMargin</item>
        <item name="android:layout_marginTop">@dimen/margin_edit_text_default</item>
    </style>
</resources>